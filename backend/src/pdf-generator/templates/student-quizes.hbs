<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Class Record</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 10px;
        }

        .header {
            text-align: center;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }

        .info-table td {
            border: 1px solid #000;
            padding: 4px;
        }

        .main-table {
            width: 100%;
            border-collapse: collapse;
            page-break-inside: avoid;
            page-break-after: auto;
        }

        .main-table th,
        .main-table td {
            border: 1px solid #000;
            padding: 2px;
            text-align: center;
        }

        .left {
            text-align: left;
        }

        .group-header {
            font-weight: bold;
            background: #f2f2f2;
        }

        .small {
            font-size: 9px;
        }
    </style>
</head>
<body>
    {{#each this}}
<div class="header">
    <h2>CLASS RECORD</h2>
</div>

<table class="info-table">
    <tr>
        <td><strong>Region: </strong> REGION XI</td>
        <td><strong>Division: </strong> {{division}}</td>
        <td><strong>School ID: </strong> 316401</td>
        <td><strong>School Year: </strong> {{schoolYear.school_year}}</td>
    </tr>
    <tr>
         <td colspan="2"><strong>Subject: </strong> {{subject.subject_title}} {{sub_subject}}</td>
        <td><strong>Grade & Section: </strong>{{roomData.grade_level}} {{roomData.room_section}}</td>
        <td><strong>Teacher: </strong> <span style="text-transform: capitalize;">{{teacher.fname}} {{teacher.mname}} {{teacher.lname}}</span></td>
    </tr>
    <tr>
         <td colspan="4"><strong>School Name: </strong>Southern Davao National High School</td>
    </tr>
</table>

<table class="main-table" >
  <thead>
    <tr class="group-header">
      <th rowspan="2">Learners' Names</th>
      <th colspan="{{writtenHeaders.length}}">WRITTEN WORKS ({{subject.writen_works}}%)</th>
      <th colspan="{{performanceHeaders.length}}">PERFORMANCE TASKS ({{subject.performance_task}}%)</th>
      <th colspan="{{quarterlyHeaders.length}}">QUARTERLY ASSESSMENT ({{subject.quarter_assessment}}%)</th>
      <th rowspan="2">Initial Grade</th>
      <th rowspan="2">Quarterly Grade</th>
    </tr>

    <tr class="small">
      {{#each writtenHeaders}}
        <th>{{this}}</th>
      {{/each}}

      {{#each performanceHeaders}}
        <th>{{this}}</th>
      {{/each}}

      {{#each quarterlyHeaders}}
        <th>{{this}}</th>
      {{/each}}
    </tr>
  </thead>

  <tbody>
    {{#each students}}
      <tr>
        <td class="left">{{name}}</td>

        {{#each writtenWorks}}
          <td>{{this}}</td>
        {{/each}}

        {{#each performanceTasks}}
          <td>{{this}}</td>
        {{/each}}

        
        {{#each quarterlyAssessment}}
          <td>{{this}}</td>
        {{/each}}

        <td>{{initialGrade}}</td>
        <td>{{quarterlyGrade}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

    {{/each}}
</body>
</html>
